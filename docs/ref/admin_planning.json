            "문의내용": ["고객정보", "문의유형", "상세내용"],
            "답변관리": ["답변작성", "답변이력", "처리상태"],
            "알림설정": ["SMS 발송", "이메일 발송", "카카오톡"]
          ]
        },
        {
          "name": "autoResponse",
          "components": ["자동 응답 설정"],
          "features": ["FAQ 연결", "템플릿 관리", "키워드 설정"]
