      ]
    },
    "customerManagement": {
      "url": "/admin/customers",
      "title": "고객 관리",
      "sections": [
        {
          "name": "customerList",
          "components": ["고객 목록"],
          "features": [
            "고객명", "연락처", "이메일", "등급",
            "가입일", "최근이용일", "총이용횟수", "총결제금액"
