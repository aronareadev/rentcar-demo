{
  "projectInfo": {
    "name": "렌트카 관리자 시스템 (Admin Dashboard)",
    "version": "1.0.0",
    "target": "관리자, 직원",
    "purpose": "차량 관리, 예약 관리, 상담 관리, 운영 관리"
  },
  "userRoles": {
    "superAdmin": {
      "name": "최고 관리자",
      "permissions": ["모든 기능", "사용자 관리", "시스템 설정"]
    },
    "manager": {
      "name": "매니저",
      "permissions": ["차량 관리", "예약 관리", "상담 관리", "통계 조회"]
    },
    "staff": {
      "name": "직원",
      "permissions": ["예약 조회", "상담 응답", "차량 상태 업데이트"]
    }
  },
  "dashboard": {
    "url": "/admin",
    "title": "대시보드",
    "widgets": [
      {
        "name": "todayStats",
        "title": "오늘 현황",
        "data": ["신규 예약", "진행중 렌탈", "반납 예정", "문의 건수"],
        "refreshInterval": "5분"
      },
      {
        "name": "revenueChart",
        "title": "매출 현황",
        "data": ["일별", "주별", "월별"],
        "chartType": "line"
      },
      {
        "name": "vehicleStatus",
        "title": "차량 현황",
        "data": ["대여가능", "대여중", "정비중", "폐차예정"],
        "chartType": "doughnut"
      },
      {
        "name": "recentReservations",
        "title": "최근 예약",
        "data": ["예약 목록", "상태", "고객 정보"],
        "limit": 10
      },
      {
        "name": "pendingConsultations", 
        "title": "대기중 상담",
        "data": ["문의 목록", "우선순위", "처리 시간"],
        "limit": 5
      }
    ]
  },
  "pages": {
    "vehicleManagement": {
      "url": "/admin/vehicles",
      "title": "차량 관리",
      "sections": [
        {
          "name": "vehicleList",
          "components": ["차량 목록 테이블", "검색/필터", "페이지네이션"],
          "features": [
            "차량번호", "모델명", "상태", "위치", "마지막 점검일",
            "총 대여횟수", "총 매출", "등록일"
          ],
          "actions": ["수정", "삭제", "상태변경", "이력조회"]
        },
        {
          "name": "addVehicle",
          "components": ["차량 등록 폼"],
          "features": [
            "기본정보": ["차량번호", "브랜드", "모델", "연식", "색상"],
            "상세정보": ["연료타입", "승차인원", "변속기", "배기량"],
            "가격정보": ["일일요금", "주간요금", "월간요금"],
            "이미지": ["대표이미지", "상세이미지", "내부이미지"],
            "옵션": ["네비게이션", "블랙박스", "후방카메라", "하이패스"],
            "보험정보": ["보험사", "보험기간", "담당자"]
          ]
        },
        {
          "name": "vehicleStatus",
          "components": ["실시간 차량 현황"],
          "features": ["지도 뷰", "목록 뷰", "상태별 필터"]
        }
      ]
    },
    "reservationManagement": {
      "url": "/admin/reservations", 
      "title": "예약 관리",
      "sections": [
        {
          "name": "reservationList",
          "components": ["예약 목록 테이블"],
          "features": [
            "예약번호", "고객명", "연락처", "차량정보",
            "대여일시", "반납일시", "상태", "결제상태", "총 금액"
          ],
          "filters": ["날짜범위", "상태", "차량", "고객"],
          "actions": ["상세보기", "수정", "취소", "승인"]
        },
        {
          "name": "reservationDetail",
          "components": ["예약 상세 정보"],
          "features": [
            "고객정보": ["이름", "연락처", "면허증", "이메일"],
            "차량정보": ["모델", "차량번호", "픽업장소", "반납장소"],
            "결제정보": ["결제방법", "결제상태", "영수증"],
            "추가서비스": ["보험", "네비", "카시트", "기타"],
            "메모": ["관리자 메모", "고객 요청사항"]
          ]
        },
        {
          "name": "calendar",
          "components": ["예약 캘린더"],
          "features": ["월간뷰", "주간뷰", "일간뷰", "차량별 뷰"]
        }
      ]
    },
    "consultationManagement": {
      "url": "/admin/consultations",
      "title": "상담 관리", 
      "sections": [
        {
          "name": "consultationList",
          "components": ["상담 목록 테이블"],
          "features": [
            "문의번호", "고객명", "연락처", "문의유형",
            "제목", "등록일시", "상태", "담당자", "처리일시"
